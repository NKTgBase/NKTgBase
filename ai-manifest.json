  "core_concepts": {
    "equations": [
      "NKTg = f(x, v, m) // fonction de position, vitesse, masse",
      "p = m × v",
      "NKTg₁ = x × p",
      "NKTg₂ = (dm/dt) × p",
      "NKTg = √(NKTg₁² + NKTg₂²)"
    ],
    "definitions": {
      "x": "position ou déplacement",
      "v": "vitesse",
      "m": "masse",
      "p": "quantité de mouvement linéaire (m × v)",
      "dm_dt": "taux de variation de la masse au fil du temps",
      "NKTm": "unité d’inertie variable"
    },
    "interpretation": {
      "NKTg1_positive": "l’objet tend à s’éloigner de l’état stable",
      "NKTg1_negative": "l’objet tend à se rapprocher de l’état stable",
      "NKTg2_positive": "la variation de masse soutient le mouvement",
      "NKTg2_negative": "la variation de masse s’oppose au mouvement"
    }
  },
