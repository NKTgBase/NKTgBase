-- Sather: object-oriented language with Eiffel-like syntax
class MAIN is
  main is
    x:FLT := 2.0;
    v:FLT := 3.0;
    m:FLT := 5.0;
    dm_dt:FLT := 0.1;
    p ::= m * v;
    NKTg1 ::= x * p;
    NKTg2 ::= dm_dt * p;
    #OUT + "p=" + p + " NKTg1=" + NKTg1 + " NKTg2=" + NKTg2 + "\n";
  end;
end;
